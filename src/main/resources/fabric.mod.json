{
  "schemaVersion": 1,
  "id": "trades",
  "version": "${version}",

  "name": "Biome Trades",
  "description": "Restricts villagers to their spawn village, redefines how they level, and restricts enchanting books to certain biomes.",
  "authors": [
    "Brent Crocker",
    "Tyler Crocker"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "io.sandbox.trades.Main"
    ]
  },
  "mixins": [
    "trades.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
