{
  "schemaVersion": 1,
  "id": "sandbox-trades",
  "version": "${version}",

  "name": "Sandbox Trades",
  "description": "Restricts villagers to their spawn village, redefines how they level, and restricts enchanting books to certain biomes.",
  "authors": [
    "Brent Crocker",
    "Tyler Crocker"
  ],
  "contact": {
    "homepage": "https://www.sandbox.io/",
    "sources": "https://github.com/sandbox-mc/sandbox-trades"
  },

  "license": "CC0-1.0",
  "icon": "assets/sandbox-trades/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "io.sandbox.trades.MainClient"
    ],
    "main": [
      "io.sandbox.trades.Main"
    ]
  },
  "mixins": [
    "trades.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14",
    "fabric": "*",
    "minecraft": "1.19.x",
    "java": ">=17",
    "sandbox-lib": "*"
  },
  "suggests": {
    "sandbox-equipment": "*"
  }
}
